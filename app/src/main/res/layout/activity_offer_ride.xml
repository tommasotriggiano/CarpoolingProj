<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.uniba.di.sms.carpooling.OfferRideActivity">

    <TextView
        android:id="@+id/casa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:text="@string/casa"
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/lavoro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="41dp"
        android:layout_toEndOf="@+id/button"
        android:text="@string/lavoro"
        android:textColor="#000"
        android:textSize="20sp"
        />


    <Button
        android:id="@+id/btnSetDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="@string/date_button_set" />



    <TextView
        android:id="@+id/textData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btnSetDate"
        android:layout_below="@+id/btnSetDate"
        android:layout_marginTop="20dp"
        android:text="@string/date_selected"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvTime"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp"
        android:onClick="showTimePickerDialog"
        android:text="Get Time"
        android:id="@+id/button" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textData"
        android:layout_marginTop="42dp"
        android:textSize="18dp" />

    <ImageButton
        android:id="@+id/Invert"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toRightOf="@id/lavoro"
        android:layout_marginLeft="5dp"
        app:srcCompat="@drawable/ic_action_name" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="2dp"
        android:layout_alignTop="@+id/lavoro"
        android:layout_toEndOf="@+id/casa"
        app:srcCompat="@drawable/ic_arrow_forward" />

    <EditText
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textData"
        android:ems="10"
        android:text="@string/data"
        android:inputType="none"
        android:bufferType="editable"
        android:drawableRight="@drawable/ic_arrow"/>


</RelativeLayout>
