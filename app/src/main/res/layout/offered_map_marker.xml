<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="128dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/immagineProfilo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/nomeAut"
            android:layout_gravity="center|top"
            android:elevation="4dp"
            android:src="@drawable/ic_image_profile" />

        <TextView
            android:id="@+id/nomePass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/immagineProfilo"
            android:text="Nome"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/indirizzo"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/immagineProfilo"
            android:layout_marginStart="15dp"
            android:layout_marginTop="17dp"
            android:text="Address"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/cognomePass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/nomePass"
            android:text="Cognome"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/telefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nomePass"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@+id/immagineProfilo"
            android:text="@string/Phone"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       android:gravity="end" >
        <Button
            android:id="@+id/accetta"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="@string/accept"
            android:textColor="@color/white"
            android:background="@drawable/button_rectangle_blue"/>

        <Button
            android:id="@+id/rifiuta"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/button_rectangle_white"
            android:text="@string/reject"
            android:textColor="@color/colorPrimaryDark"/>

    </LinearLayout>
</LinearLayout>