<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardviewApproved"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="4dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_image_profile"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/nomeAut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageProfile"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:text="Nome"/>
        <TextView
            android:id="@+id/cognomeAut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/nomeAut"
            android:layout_marginTop="5dp"
            android:textColor="#000"
            android:layout_marginStart="3dp"
            android:textSize="20sp"
            android:text="Cognome"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/emailApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:text="Email"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end">

        <Button
            android:id="@+id/accetta"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/approve"/>
        <Button
            android:id="@+id/rifiuta"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/reject"/>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>