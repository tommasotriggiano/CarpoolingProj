<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardviewApproved"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="4dp"
    >

    <LinearLayout
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageProfile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_image_profile" />

            <TextView
                android:id="@+id/nomeAut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/imageProfile"
                android:text="Nome"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/cognomeAut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/nomeAut"
                android:text="Cognome"
                android:textColor="#000"
                android:textSize="20sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/emailApp"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Email"
            android:textColor="#000"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/viewBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/accetta"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/approve" />

            <Button
                android:id="@+id/rifiuta"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/reject" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>