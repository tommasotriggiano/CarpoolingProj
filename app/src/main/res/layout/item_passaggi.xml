<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardviewRichiesti"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="4dp"
    >
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_image_profile"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/nomeAut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageProfile"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:textColor="#000"
                android:textSize="20sp"
                android:text="Nome"/>
            <TextView
                android:id="@+id/cognomeAut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/nomeAut"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                android:layout_marginStart="3dp"
                android:textSize="20sp"
                android:text="Cognome"/>
            <TextView
                android:id="@+id/Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/casa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Home"
            android:drawableStart="@drawable/ic_location"
            android:textColor="#000"
            android:textSize="20sp" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Giorno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_today_black"
            android:text="Giorno"
            android:textColor="#000"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="Data"
            android:textColor="#000"
            android:textSize="20sp"/>

    </LinearLayout>
        <TextView
            android:id="@+id/Ora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ora"
            android:textColor="#000"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_access_time_black"/>


        <TextView
            android:id="@+id/numberPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_phone"
            android:text="Telefono"
            android:textColor="#000"
            android:textSize="20sp"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>