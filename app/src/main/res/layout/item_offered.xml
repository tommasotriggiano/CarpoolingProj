<?xml version="1.0" encoding="utf-8"?>

<FrameLayout   
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        >

        <RelativeLayout
        android:id="@+id/viewBackground"
        android:background="#c1fd0202"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/delete"
            android:src="@drawable/ic_delete_white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete_text"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toLeftOf="@id/delete"
            android:textColor="@color/white"
            android:text="@string/delete"
            android:textSize="17sp"/>

    </RelativeLayout>

        <LinearLayout
            android:id="@+id/viewForeground"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="339dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/cart_badge"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:background="@drawable/badge_background"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/casa"
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_location"
                    android:text="@string/Home"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </FrameLayout>

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_today_black" />

            <TextView
                android:id="@+id/Giorno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giorno"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Data"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="Data"
                android:textColor="#000"
                android:textSize="20sp" />

        </LinearLayout>
            <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/Ora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ora"
                android:textColor="#000"
                android:textSize="20sp"
                android:drawableStart="@drawable/ic_access_time_black"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp">
                <TextView
                    android:id="@+id/textpostiOcc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="@string/Occupied"
                    android:textSize="20sp"
                    android:drawableStart="@drawable/ic_people"/>
                <TextView
                    android:id="@+id/postiOcc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>



