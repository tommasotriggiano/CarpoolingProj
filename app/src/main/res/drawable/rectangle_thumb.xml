<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
 <item android:state_checked="true" >
     <shape android:shape="rectangle">
     <solid android:color="@color/colorAccent"></solid>
     <size android:height="35dp" android:width="150dp"></size>
         <corners android:bottomRightRadius="25dp"></corners>
         <stroke android:width="2dp" android:color="#ffff"></stroke></shape>
 </item>
 <item android:state_checked="false">
    <shape android:shape="rectangle">
        <solid android:color="@color/colorAccent"></solid>
        <size android:height="35dp" android:width="200dp"></size>
        <corners android:bottomLeftRadius="25dp"></corners>
        <stroke android:width="2dp" android:color="#ffff"></stroke>
    </shape>
 </item>
</selector>