<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.uniba.di.sms.carpooling.RegistrationFormActivity">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/Linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="46dp"
            android:layout_marginEnd="142dp"
            android:layout_marginStart="142dp"
            android:layout_marginTop="58dp"
            android:contentDescription="@string/etUsername"
            android:src="@drawable/ic_portrait_black_24dp"
            app:layout_constraintBottom_toTopOf="@+id/Nome"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/Nome"
            android:layout_width="179dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="208dp"
            android:ems="10"
            android:hint="@string/Name"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toStartOf="@+id/Cognome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/Cognome"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="48dp"
            android:ems="10"
            android:hint="@string/Surname"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Nome"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <EditText
            android:id="@+id/Indirizzo"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="@string/Address"
            android:inputType="textPostalAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Nome" />

        <EditText
            android:id="@+id/Telefono"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:hint="@string/Phone"
            android:inputType="phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Azienda" />

        <Button
            android:id="@+id/confirm"
            android:background="@drawable/button_shape_normal"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="@string/Conferma"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Auto"
            tools:text="@string/Conferma" />

        <EditText
            android:id="@+id/Auto"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="102dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="9dp"
            android:ems="10"
            android:hint="@string/Car"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Telefono" />

        <Spinner
            android:id="@+id/Azienda"
            android:layout_width="274dp"
            android:layout_height="35dp"
            android:layout_marginBottom="18dp"
            android:layout_marginEnd="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="9dp"
            android:entries="@array/Companies"
            app:layout_constraintBottom_toTopOf="@+id/Telefono"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Indirizzo" />


    </android.support.constraint.ConstraintLayout>

</ScrollView>
